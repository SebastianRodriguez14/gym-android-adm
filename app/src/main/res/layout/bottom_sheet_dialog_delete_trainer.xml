<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/shape_user_background">
        <LinearLayout
            android:id="@+id/delete_trainer_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="28dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Eliminar Entrenador"
                android:textColor="@color/dark_bg_color"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Â¿Esta seguro de eliminar al entrenador?"
                android:textAlignment="textStart"
                android:textColor="@color/dark_bg_color"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/delete_trainer_cancel"
                    android:layout_width="135dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_cancelar"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:paddingTop="3dp"
                    android:text="CANCELAR"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/delete_trainer_delete"
                    android:layout_width="135dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_registrar"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:paddingTop="3dp"
                    android:text="ELIMINAR"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</FrameLayout>